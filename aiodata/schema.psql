SELECT
  "c"."relname" AS "table",
  "a"."attname" AS "field",
  "a"."attnum" = ANY("i"."indkey") AS "main",
  "t"."typname" AS "type",
  "a"."attndims" AS "dims",
  NOT "a"."attnotnull" AS "null",
  col_description("c"."oid", "a"."attnum") AS "info",
  ARRAY["r"."relname", "r"."attname"] as "refs"
FROM
  "pg_namespace" "n"
JOIN
  "pg_class" "c"
ON
  "c"."relnamespace" = "n"."oid"
JOIN
  "pg_index" "i"
ON
  "c"."oid" = "i"."indrelid"
  AND
  "i"."indisprimary"
JOIN
  "pg_attribute" "a"
ON
  "c"."oid" = "a"."attrelid"
JOIN
  "pg_type" "t"
ON
  "a"."atttypid" = "t"."oid"
LEFT OUTER JOIN
  (
    SELECT
      "s"."connamespace",
      "s"."conrelid",
      "s"."conkey",
      "c"."relname",
      "a"."attname",
      "s"."confkey",
      array_position("s"."confkey", "a"."attnum") AS "confpos"
    FROM
      "pg_constraint" "s"
    JOIN
      "pg_class" "c"
    ON
      "s"."confrelid" = "c"."oid"
    JOIN
      "pg_attribute" "a"
    ON
      "c"."oid" = "a"."attrelid"
      AND
      "a"."attnum" = ANY("s"."confkey")
    WHERE
      "s"."contype" = 'f'
  ) "r"
ON
  "r"."connamespace" = "n"."oid"
  AND
  "r"."conrelid" = "c"."oid"
  AND
  "a"."attnum" = ANY("r"."conkey")
  AND
  array_position("r"."conkey", "a"."attnum") = "r"."confpos"
WHERE
  "a"."attnum" > 0
  AND
  "n"."nspname" = '{0}'
  AND
  NOT "a"."attisdropped";
